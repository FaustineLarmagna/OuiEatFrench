{% extends "::base.html.twig" %}
{% block title %}OuiEatFrench | Modifier Profile{% endblock %}
{% block body %}
	<div class="row">
		<div class="col-md-3">
			<a href="{{ path('fos_user_profile_show') }}">Revenir au profil</a>
			<h3>Editer votre profile :</h3>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4">
			<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(formPassword) }} method="POST" class="fos_user_profile_edit">
			    {{ form_widget(formPassword) }}
			    <div>
			        <input type="submit" value="Changer de password" />
			    </div>
			</form>

		</div>
	</div>
{% endblock %}

