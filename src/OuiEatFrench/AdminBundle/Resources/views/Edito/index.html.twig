{% extends 'OuiEatFrenchAdminBundle::layout.html.twig' %}

{% block page_title %}
<h3>Index des Edito</h3>
{% endblock %}
{% block content %}
<a href={{ path('oui_eat_french_admin_edito_create') }}><button class="btn btn-success offset12" type="button">Ajouter</button></a>
<table class="table">
    <thead>
    <tr>
        <td><strong>Image</strong></td>
        <td><strong>Titre</strong></td>
        <td><strong>text</strong></td>
        <td><strong>Actions</strong></td>
    </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr style="background-color:{% if entity.disable == 1 %}#ADCF4F{% else %}#B4AF91{% endif %}">
            <td><img style="width: 150px; height: 150px;" src="{{ asset("OEF/img_admin_edito/" ~ entity.imageName) }}" alt="{{ entity.imageName }}"></td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.text }}</td>
            <td>
                <ul>
                    <li><a href={{ path('oui_eat_french_admin_edito_edit', {'id' : entity.id}) }}>Edition</a></li>
                    <li><a class='delete' href={{ path('oui_eat_french_admin_edito_delete', {'id' : entity.id}) }}>Supprimer</a></li>
                    <li><a href={{ path('oui_eat_french_admin_edito_disable', {'id' : entity.id}) }}>
                            {% if entity.disable == 1 %}Ne plus afficher{% else %}Afficher{% endif %}
                    </a></li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}