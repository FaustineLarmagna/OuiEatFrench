{% extends 'OuiEatFrenchAdminBundle::layout.html.twig' %}

{% block title %}
Index des Edito
{% endblock %}
{% block content %}
<a href={{ path('oui_eat_french_admin_edito_create') }}>Ajouter</a>
<table class="table table-hover">
    <thead>
    <tr>
        <td>Image</td>
        <td>Titre</td>
        <td>text</td>
        <td>Actions</td>
    </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><img style="width: 150px; height: 150px;" src="{{ asset("OEF/img_admin_edito/" ~ entity.imageName) }}" alt="{{ entity.imageName }}"></td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.text }}</td>
            <td>
                <ul>
                    <li><a href={{ path('oui_eat_french_admin_edito_edit', {'id' : entity.id}) }}>Edition</a></li>
                    <li><a class='delete' href={{ path('oui_eat_french_admin_edito_delete', {'id' : entity.id}) }}>Supprimer</a></li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}