{% extends 'OuiEatFrenchAdminBundle::layout.html.twig' %}

{% block title %}
<h3>Index des faq</h3>
{% endblock %}
{% block content %}
<a href={{ path('oui_eat_french_admin_faq_create') }}>Ajouter</a>
<table class="table table-hover">
    <thead>
    <tr>
        <td><strong>Titre</strong></td>
        <td><strong>Question</strong></td>
        <td><strong>Réponce</strong></td>
        <td><strong>isibilitée</strong></td>
        <td><strong>Actions</strong></td>
    </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.title }}</td>
            <td>{{ entity.question }}</td>
            <td>{{ entity.answer }}</td>
            <td>{{ entity.disable }}</td>
            <td>
                <ul>
                    <li><a href={{ path('oui_eat_french_admin_faq_edit', {'id' : entity.id}) }}>Edition</a></li>
                    <li><a class='delete' href={{ path('oui_eat_french_admin_faq_delete', {'id' : entity.id}) }}>Supprimer</a></li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}